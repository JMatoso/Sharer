@model Sharer.Models.Directories

<div class="my-2">
    <h4 class="text-break">
        Files in
        @ViewBag.Title
    </h4>
    @{
        var totalFilesCounted = Model.Folders.Count + Model.Files.Count;
        <span>@totalFilesCounted files found</span>
    }
</div>

<div class="row">
    @foreach (var item in Model.Folders)
    {   
        string path = item.Path.Replace('\\', '-');

        <div class="col-md-2 mt-2" onclick="OpenFolder('@path')">
            <div class="folder">
                <span class="">
                    <span class="feather-bg" data-feather="folder"></span>
                </span>
                <h6 class="text-break">@Html.DisplayFor(x => item.Title)</h6>
            </div>
        </div>
    }
</div>

<hr>
<div class="row">
    @foreach (var item in Model.Files)
    {
        <div class="col-md-4 mt-2">
            <div onclick="#" class="rounded bg-white p-3 border file">
                <div class="row">
                    <div class="col-2">
                        <div>
                            <span style="font-size: 2em;">
                                @if(item.Type == Types.Audio)
                                {
                                    <span class="text-primary">
                                        <span data-feather="music"></span>
                                    </span>
                                }
                                else if(item.Type == Types.Document)
                                {
                                    if(item.DocType == DocTypes.txt)
                                    {
                                        <span class="text-muted">
                                            <span data-feather="file-text"></span>
                                        </span>
                                    }
                                    else if(item.DocType == DocTypes.pdf)
                                    {
                                        <span class="text-danger">
                                            <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
                                        </span>
                                    }
                                    else if(item.DocType == DocTypes.docx)
                                    {
                                        <span class="text-primary">
                                            <i class="fa fa-file-word-o" aria-hidden="true"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span>
                                            <span data-feather="file-text"></span>
                                        </span>
                                    }
                                }
                                else if(item.Type == Types.Compressed)
                                {
                                    <span class="text-info">
                                        <span data-feather="archive"></span>
                                    </span>
                                }
                                else if(item.Type == Types.Video)
                                {
                                    <span class="text-danger">
                                        <span data-feather="video"></span>
                                    </span>
                                }
                                else if(item.Type == Types.Image)
                                {
                                    <span class="text-success">
                                        <span data-feather="image"></span>
                                    </span>
                                }
                                else if(item.Type == Types.Application)
                                {
                                    <span class="text-orange">
                                        <span data-feather="package"></span>
                                    </span>
                                }
                                else if(item.Type == Types.Other)
                                {
                                    <span>
                                        <span data-feather="file"></span>
                                    </span>
                                }
                            </span>
                        </div>
                    </div>
                    @{
                        string folder = item.Path;
                        if(!folder.Contains("SharedFolders/"))
                        {
                            folder = $"file:///{folder}";
                        }
                    }
                    <div class="col-8">
                        <div aria-haspopup="true" data-toggle="tooltip" data-html="true" 
                            title="
                                <a class='text-white' href='@folder' target='_blank' rel='noopener noreferrer'>Download</a> 
                                @if(item.IsPlayable){ <span>|</span> <a class='text-white' href='@folder' target='_blank' rel='noopener noreferrer'>Play File</a> }
                            ">
                            <span class="d-block text-break">@Html.DisplayFor(f => item.Title)</span>
                            <small class="d-block text-muted">
                                <span class="text-dark">@Html.DisplayFor(f => item.Extension)</span> |
                                @Html.DisplayFor(f => item.Size) 
                            </small>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="text-right">
                            <div class="btn-group dropdown">
                                <button class="button-option" type="button" id="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span>
                                        <span data-feather="more-horizontal"></span>
                                    </span>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" x-placement="top-end w-50" aria-labelledby="dropdown">
                                    <h6 class="dropdown-header">
                                        @Html.DisplayFor(f => item.Type) | 
                                        @Html.DisplayFor(f => item.Extension)
                                    </h6>
                                    <h6 class="dropdown-header">
                                        @Html.DisplayFor(f => item.Minutes)
                                    </h6>
                                    <h6 class="dropdown-header">
                                        @Html.DisplayFor(f => item.Size)
                                    </h6>
                                    <h6 class="dropdown-header">
                                        @Html.DisplayFor(f => item.CreationTime)
                                    </h6>
                                    <h6 class="dropdown-header">
                                        @Html.DisplayFor(f => item.LastAccessTime)
                                    </h6>

                                    <div class="dropdown-divider"></div>
                                    <a href="@folder" download="@item.Title" class="dropdown-item text-primary" target="_blank" rel="noopener noreferrer">                                     
                                        <span class="feather-10" data-feather="download"></span>
                                        <span class="pt-5">Download</span>
                                    </a>

                                    @if(item.IsPlayable)
                                    {
                                        <a href="@folder" class="dropdown-item text-success" target="_blank" rel="noopener noreferrer">
                                            <span class="feather-10" data-feather="play-circle"></span>
                                            <span>Play File</span>
                                        </a>
                                    }

                                    @if(item.IsReadOnly)
                                    {
                                        <h6 class="dropdown-header text-danger">
                                            Read Only
                                        </h6>
                                    }
                                    else
                                    {
                                        <a asp-action="delete" asp-route-path="@item.Path" asp-route-returnUrl="/sharing/index" class="dropdown-item text-danger" type="button">
                                            <span class="feather-10" data-feather="trash-2"></span>
                                            <span>Delete</span>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if(Model.Files.Count < 1 && Model.Folders.Count < 1)
{
    <div class="text-center w-100">
        <h1>Empty folder</h1>
        <img class="w-100" src="/images/empty.svg" alt="Empty">
    </div>
}
